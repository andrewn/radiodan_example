#!/usr/bin/env ruby
require 'rubygems'
require 'bundler/setup'
require 'radiodan'

$: << './lib'
require 'download_bbc_radio'
require 'web_app'
require 'radio_controller'

root = File.join(File.dirname(__FILE__), '..')

@bbc_stations = DownloadBBCRadio.new
@bbc_stations.run

radio6 = @bbc_stations.stations['bbc_radio_6']

radio = Radiodan.new do |builder|
  builder.log      STDOUT
  builder.adapter  :MPD, :host => 'localhost', :port => 6600
  builder.use      :web_server, WebApp, :port => 3000
  builder.use      :radio_controller
  builder.playlist radio6
end

radio.start
